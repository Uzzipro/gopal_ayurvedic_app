<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_60_dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="20dp"
    android:background="@drawable/dialog_white_bg"
    android:elevation="5dp"
    android:orientation="horizontal"
    android:paddingVertical="10dp"
    android:weightSum="1">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivProductImg"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_cart"
        tools:ignore="VectorDrawableCompat" />


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llDetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_20_dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dm_sans_bold"
            android:textColor="@color/black"
            android:textSize="17dp" />


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:fontFamily="@font/dm_sans_medium"
                android:gravity="bottom"
                android:text=""
                android:textColor="@color/dark_grey"
                android:textSize="15dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvProductWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/dm_sans_medium"
                android:maxLines="1"
                android:textColor="@color/grey"
                android:textSize="12dp" />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:gravity="center"
        android:id="@+id/llPlusMinus"
        android:orientation="horizontal"
        android:paddingHorizontal="5dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/minusQuantity"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:background="@drawable/buttonleft"
            android:text="-"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/quantityCount"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dm_sans_bold"
            android:gravity="center"
            android:text="0"
            android:textColor="#000000"
            android:textSize="12sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/plusQuantity"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:background="@drawable/buttonright"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>